import sys
import gpxtools

try:
    filename = sys.argv[1]
except Exception:
    print("Usage: gpx-info <filename>")
    print("Show info about the contents of <filename>")
    sys.exit(1)

try:
    tz = sys.argv[2]
except Exception:
    tz = None

gpxtools.info(filename, tz)

